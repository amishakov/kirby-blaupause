{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"public/**",
			"backend/**",
			"storage/**",
			"node_modules/**",
			"dist/**",
			"build/**",
			"coverage/**",
			"**/*.min.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120,
		"ignore": []
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsoleLog": "warn"
			},
			"complexity": {
				"noForEach": "off"
			},
			"performance": {
				"recommended": true
			},
			"style": {
				"noNegationElse": "warn",
				"useShorthandArrayType": "error"
			}
		},
		"ignore": []
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"arrowParentheses": "asNeeded"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": false
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		},
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": false
		}
	}
}
